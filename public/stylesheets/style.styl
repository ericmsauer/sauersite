@import 'nib'
global-reset()

// Content
background-color = rgb(250,250,250)
content-bar-color = rgb(0,255,0)
content-bar-text-color = rgb(0,0,0)
// Navigation
navigation-color = rgb(155,155,155)
navigation-text-color = rgb(75,75,75)
navigation-text-hover-color = rgb(175,175,175)
nav_trans_time = .5s
footer_trans_time = .5s

html
  height 100%

body
  overflow-y hidden
  overflow-x hidden
  margin 0
  padding 0
  height 100%
  background-color background-color

#title_name
  position fixed
  top 0px
  left 160px
  width 100%
  z-index 10
  padding 5px
  color navigation-text-color
  background navigation-color
  border-bottom 1px solid rgb(0,0,0)
  box-shadow 15px 2px 15px 0px rgb(0,0,0);
  text-shadow: 0px 1px 0px rgba(255,255,255,.5);
  font-size 250%
  font-family Molot

#navigation
  position fixed
  top 0px
  left 0px
  z-index 9
  width 150px
  height 100%
  padding 0 15px 0 15px
  background navigation-color
  box-shadow 5px 0 25px 0px rgb(0,0,0);
  border-right 1px solid rgb(0,0,0)
div#navigation
  text-align left
  padding 5px
#navigation_text
  height 50px
  a:link
    color navigation-text-color
    font-family Molot
    font-size 150%
    text-decoration none
    text-shadow: 0px 1px 0px rgba(255,255,255,.5);
  a:visited
    color navigation-text-color
  a:hover
    color navigation-text-hover-color
    text-shadow: 0px 1px 0px rgba(0,0,0,.5);
#navigation_buttons
  position absolute
  bottom 25px
  
#content
  overflow-y scroll
  position absolute
  width 100%
  top 65px
  left 170px
  margin-left 10px 
#content p
  font-size 150%
  font-family Aleo
div#content_title
  font-size 180%
  font-family Aleo-Bold
#content_bar
  position relative
  height 30px
  width 400px
  border-style solid
  border-width 1px
  font-size 140%
  font-family Aleo-Italic
#content_bar_name
  color content-bar-text-color
  padding-left 5px
  padding-top 4px
  position absolute
  left 5%
