@import 'nib'
global-reset()

// Content
background-color = rgb(250,250,250)
// Navigation
navigation-color = rgb(125,125,125)
navigation-text-color = rgb(75,75,75)
navigation-text-hover-color = rgb(150,150,150)
nav_trans_time = .5s
footer_trans_time = .5s

html
  height 100%

body
  overflow-y scroll
  overflow-x hidden
  margin 0
  padding 0
  height 100%
  background-color background-color

#title_name
  position fixed
  top 0px
  left 160px
  width 100%
  z-index 10
  padding 5px
  color navigation-text-color
  background navigation-color
  border-bottom 1px solid rgb(0,0,0)
  box-shadow 15px 2px 15px 0px rgb(0,0,0);
  text-shadow: 0px 1px 0px rgba(255,255,255,.5);
  font-size 250%
  font-family Molot

#navigation
  position fixed
  top 0px
  left 0px
  z-index 9
  width 150px
  height 100%
  padding 0 15px 0 15px
  background navigation-color
  box-shadow 5px 0 25px 0px rgb(0,0,0);
  border-right 1px solid rgb(0,0,0)
div#navigation
  text-align left
  padding 5px
#navigation_text
  height 50px
  a:link
    color navigation-text-color
    font-family Molot
    font-size 150%
    text-decoration none
    text-shadow: 0px 1px 0px rgba(255,255,255,.5);
  a:visited
    color navigation-text-color
  a:hover
    color navigation-text-hover-color
#navigation_buttons
  position absolute
  bottom 25px
  
#content
  position absolute
  width 100%
  top 50px
  left 161px
  margin-left 10px 
#content p
  font-size 250%
  font-family GoodDog

footer
  position fixed
  bottom 0
  width 100%
  background rgb(255,255,255)
  border 1px solid rgb(0,0,0)
  padding-left 40%
  font-size 100%
  font-family Molot
  transition-propert padding-left
  transition-duration nav_trans_time
  -moz-transition-property padding-left
  -moz-transition-duration nav_trans_time
  -webkit-transition-property padding-left
  -webkit-transition-duration nav_trans_time
  -o-transition-property padding-left
  -o-transition-duration nav_trans_time
  &:hover
    padding-left 0%
#footer_inner
  position relative

/*
 * Index
 */
div#column1
  position fixed
  height 100
  width 100
  left 180
  top 100
  border 1px solid rgb(0,0,0)
div#column2
  position absolute
  height 100
  width 100
  left 100
  top 0
  border 1px solid rgb(0,0,0)
  

/*
 * Images
 */

div#me_picture
  height 130
  width 130
  margin-left 3px
  margin-top 5px
  margin-right 3px
  margin-bottom 10px
  padding-bottom -5px 
  border 2px solid rgb(0,0,0)
  
/*
 * Fonts
 */
@font-face
  font-family GoodDog
  src url(/fonts/GoodDog.otf) format('truetype')
@font-face
  font-family Molot
  src url(/fonts/Molot.otf) format('truetype')

