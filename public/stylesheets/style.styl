footer
  position fixed
  bottom 0
  width 100%
  background rgb(255,255,255)
  border 1px solid rgb(0,0,0)
  padding-left 40%
  font-size 100%
  font-family Molot
  transition-propert padding-left
  transition-duration nav_trans_time
  -moz-transition-property padding-left
  -moz-transition-duration nav_trans_time
  -webkit-transition-property padding-left
  -webkit-transition-duration nav_trans_time
  -o-transition-property padding-left
  -o-transition-duration nav_trans_time
  &:hover
    padding-left 0%
#footer_inner
  position relative

/*
 * Index
 */
div#column1
  position fixed
  height 100
  width 100
  left 180
  top 100
  border 1px solid rgb(0,0,0)
div#column2
  position absolute
  height 100
  width 100
  left 100
  top 0
  border 1px solid rgb(0,0,0)
  

/*
 * Images
 */
div#me_picture
  height 130
  width 130
  margin-left 3px
  margin-top 5px
  margin-right 3px
  margin-bottom 10px
  padding-bottom -5px 
  
